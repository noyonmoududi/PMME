<%- include('../layout/adminHeader'); -%>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header d-flex p-0">
            <h3 class="card-title p-3"><b>Retirement Project List</b></h3>
            <ul class="nav nav-pills ml-auto p-2">
              <li class="nav-item">
                <a class="btn btn-sm btn-info filterbutton" id="filterbutton"><i class="fa fa-solid fa-filter"></i> Filter</a>
                <% if(has_permission(Request, ['retirement.project.create'])){ %>
                  <a class="btn btn-sm btn-success" href="/admin//retirements/retirements-project-create"><i class="fa fa-plus-circle"></i> Add New</a></li>
                <% } %>
              </ul>
          </div>

          <div class="card-body p-0">
            <table class="table table-responsive table-bordered table-hover text-nowrap">
              <thead>
                <tr>
                  <th>SL</th>
                  <th>Project Number</th>
                  <th>Project Name</th>
                  <th>Country</th>
                  <th>Provider</th>
                  <th>Vintage</th>
                  <th>Retirement Qty</th>
                  <th>Retirement Date</th>
                  <th>Remaining Qty for Marketplace</th>
                  <th>Serial Number</th>
                  <th>Credit Sale Unit</th>
                  <th>Per Unit Price(usd)</th>
                  <th>Retirement URL</th>
                  <th>Created Date</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if(rows.length > 0) { 
                  rows.forEach(row=>{%>
                  <tr>
                      <td><%- sl++ %></td>
                      <td><%- row.project_num %></td>
                      <td><%- row.project_name %></td>
                      <td><%- row.country %></td>
                      <td><%- row.provider_title %></td>
                      <td><%- row.vintage %></td>
                      <td><%- row.quantity %></td>
                      <td><%- row.retirement_date %></td>
                      <td><%- row.remaining_quantity %></td>
                      <td><%- row.serial_number %></td>
                      <td><%- row.sale_unit_symbol %></td>
                      <td><%- row.per_unit_price_usd %></td>
                      <td><a href="<%- row.retirement_project_url %>" class="btn btn-info" target="_blank">Retirement Details</a></td>
                      <td><%- row.created_at %></td>
                      <td>
                        <% if(has_permission(Request, ['retirement.project.edit'])){ %>
                            <a class="btn btn-warning btn-sm" href="/admin/retirements/<%= row.id %>/retirements-project-edit"><i class="fas fa-edit"></i></a>
                        <% } %>
                        
                      </td>
                  </tr>
              <% }) }else{%>
                  <tr>
                      <td colspan="15" class="text-center">No Data Found!</td>
                  </tr>
              <% }%>
              </tbody>
            </table>
          </div>

          <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
              <li class="page-item"><%- pagination %></li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<%- include('../layout/adminFooter'); -%>

