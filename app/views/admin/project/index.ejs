<%- include('../layout/adminHeader'); -%>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header d-flex p-0">
            <h3 class="card-title p-3"><b>Project List</b></h3>
            <ul class="nav nav-pills ml-auto p-2">
              <li class="nav-item">
                <a class="btn btn-sm btn-info filterbutton" id="filterbutton"><i class="fa fa-solid fa-filter"></i> Filter</a>
                <% if(has_permission(Request, ['project.create'])){ %>
                  <a class="btn btn-sm btn-success" href="/admin/project/project-create"><i class="fa fa-plus-circle"></i> Add New</a></li>
                <% } %>
              </ul>
          </div>

          <div class="card-body p-0">
            <table class="table table-responsive table-bordered table-hover text-nowrap">
              <thead>
                <tr>
                  <th>SL</th>
                  <th>Project Number</th>
                  <th>Project Image</th>
                  <th>Project Name</th>
                  <th>Provider</th>
                  <th>Type</th>
                  <th>Methodology Protocol</th>
                  <th>region</th>
                  <th>country</th>
                  <th>Site Location</th>
                  <th>Project Developer</th>
                  <th>Created Date</th>
                  <th>Registry Url</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if(rows.length > 0) { 
                  rows.forEach(row=>{%>
                  <tr>
                      <td><%- sl++ %></td>
                      <td><%- row.project_num %></td>
                      <td><img class="img img-fluid img-list-item" style="max-width: 100px;" src="/file_storage/projects/<%- row.image %>"></td>
                      <td><%- row.project_name %></td>
                      <td><%- row.provider_title %></td>
                      <td><%- row.type %></td>
                      <td><%- row.methodology_protocol %></td>
                      <td><%- row.region %></td>
                      <td><%- row.country %></td>
                      <td><%- row.project_site_location %></td>
                      <td><%- row.project_developer %></td>
                      <td><%= moment(row.created_at).format('DD-MMM-YYYY hh:mm:ss') %></td>
                      <td><a href="<%- row.registry_url %>" class="btn btn-info" target="_blank">Project Details</a></td>
                      <td>
                        <% if(has_permission(Request, ['project.edit'])){ %>
                            <a class="btn btn-warning btn-sm" href="/admin/project/<%= row.id %>/project-edit"><i class="fas fa-edit"></i></a>
                        <% } %>
                        <% if(has_permission(Request, ['project.delete'])){ %>
                            <form method="post" action="/admin/project/<%= row.id %>/project-delete" class="delete_form" style="display: inline;" >
                                <button class="btn btn-danger btn-sm delete_btn"><i class="fa fa-trash"></i></button>
                            </form>
                        <% } %>
                      </td>
                  </tr>
              <% }) }else{%>
                  <tr>
                      <td colspan="14" class="text-center">No Data Found!</td>
                  </tr>
              <% }%>
              </tbody>
            </table>
          </div>

          <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
              <li class="page-item"><%- pagination %></li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<%- include('../layout/adminFooter'); -%>

<script>
  $(function () {
      $(document).on('click','.delete_btn',function (e) {
          e.preventDefault();
          var target = $(this).closest('form.delete_form');
          $.confirm({
                  icon: 'fas fa-warning',
                  title: 'Confirm!',
                  content: 'Do you want to delete this Project??',
                  type: 'red',
                  typeAnimated: true,
                  buttons: {
                      confirm: function () {
                          target.submit();
                      },
                      cancel: function () {
                      }
                  }
          });
     
      });

  })
</script>
