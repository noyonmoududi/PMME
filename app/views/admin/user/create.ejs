<%- include('../layout/adminHeader'); -%>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header d-flex p-0">
            <h3 class="card-title p-3"><b>Create User</b></h3>
            <ul class="nav nav-pills ml-auto p-2">
              <li class="nav-item">
                <a class="btn btn-sm btn-primary" href="/admin/users"><i class="fa fa-arrow-left"></i> Back</a></li>
              </ul>
          </div>

          
            <div class="card-body">
                <form action="/admin/user-create" method="post" autocomplete="off">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                                <div class="form-group">
                                <label for="name">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Full Name">
                                <p class="text-danger"><%= (typeof errors != 'undefined' && errors.name)?errors.name:''; %></p>
                                </div>
                                
                                <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                                <p class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email:''; %></p>
                                </div>
                                <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter phone">
                                </div>
                                <div class="form-group">
                                  <label for="phone">Role</label>
                                  <select class="form-control" name="role" required>
                                    <option value="">--Select Role--</option>
                                    <% if(roleData.length > 0) { %>
                                      <% for(let key in roleData){ %>
                                        <option value="<%- roleData[key].id %>">
                                            <%- roleData[key].name %>
                                        </option>
                                      <% } %>
                                    <% } %>
                                </select>
                                <p class="text-danger"><%= (typeof errors != 'undefined' && errors.role)?errors.role:''; %></p>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layout/adminFooter'); -%>
